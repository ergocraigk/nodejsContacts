extends layout

block content
  h1
    Contact List
  table#dataTable
        thead
                tr(role="row")
                    td Last Name
                    td First Name
                    td Job Title
                    td Company
                    td Email
                    td Phone#
                    td Date Met
                    td Where Met
                    td Comments
                    td Edit
        tbody
            each dbContacts in contacts
                tr(role="row")
                    td #{dbContacts.lastname}
                    td #{dbContacts.firstname}
                    td #{dbContacts.jobTitle}
                    td #{dbContacts.company}
                    td #{dbContacts.email}
                    td #{dbContacts.phone}
                    td #{dbContacts.dateMet}
                    td #{dbContacts.whereMet}
                    td #{dbContacts.notes}
                    td
                        form(method='get' action='/edit')
                            input(type='text' name='_id' value='#{dbContacts._id}' style='visibility: hidden') 
                            input(type='submit' value='Edit')
  link(href='//cdn.datatables.net/1.10.5/css/jquery.dataTables.css' rel='stylesheet')
  script(src='//code.jquery.com/jquery-1.10.2.min.js')
  script(src='//cdn.datatables.net/1.10.5/js/jquery.dataTables.js')
  script(src='javascripts/datatable.js')